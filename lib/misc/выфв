SELECT items.*, countries_of_origin.name country, (SELECT FLOOR(prices.price) FROM prices WHERE prices.item_id = items.item_id ORDER BY prices.price_id DESC LIMIT 1) price,                        (SELECT items_in_stock.amount FROM items_in_stock WHERE items_in_stock.item_id = items.item_id  ORDER BY items_in_stock.stock_id DESC LIMIT 1) in_stock,        (SELECT amount FROM cart_items WHERE cart_id = '64' AND item_id = items.item_id) amount,        (SELECT liked_items.like_id FROM liked_items WHERE liked_items.item_id = items.item_id AND liked_items.user_id = '55' ORDER BY liked_items.like_id LIMIT 1) is_liked, MATCH (name) AGAINST ('вино красное'  IN NATURAL LANGUAGE MODE) score                              FROM `items`         LEFT JOIN countries_of_origin ON countries_of_origin.country_id = items.country_id        WHERE   items.business_id = (SELECT selected_business.business_id FROM selected_business WHERE selected_business.user_id = '55' ORDER BY select_id DESC LIMIT 1) AND MATCH(items.name) AGAINST ('вино красное' IN NATURAL LANGUAGE MODE)   AND (SELECT FLOOR(prices.price) FROM prices WHERE prices.item_id = items.item_id ORDER BY prices.price_id DESC LIMIT 1) > 1 AND (SELECT items_in_stock.amount FROM items_in_stock WHERE items_in_stock.item_id = items.item_id  ORDER BY items_in_stock.stock_id DESC LIMIT 1) > 1  ORDER BY score DESC  LIMIT 30 OFFSET 30